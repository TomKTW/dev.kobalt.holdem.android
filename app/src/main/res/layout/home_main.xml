<?xml version="1.0" encoding="utf-8"?>
<dev.kobalt.holdem.android.view.StackView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <dev.kobalt.holdem.android.view.StackView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <dev.kobalt.holdem.android.view.ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

        <dev.kobalt.holdem.android.view.LabelView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </dev.kobalt.holdem.android.view.StackView>

    <dev.kobalt.holdem.android.view.LargeImageLabelButtonView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:iconImage="@drawable/ic_baseline_play_arrow_24"
        app:titleLabel="Play" />

    <dev.kobalt.holdem.android.view.LargeImageLabelButtonView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:iconImage="@drawable/ic_baseline_settings_24"
        app:titleLabel="Options" />

    <dev.kobalt.holdem.android.view.LargeImageLabelButtonView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:iconImage="@drawable/ic_baseline_info_24"
        app:titleLabel="Legal" />

</dev.kobalt.holdem.android.view.StackView>